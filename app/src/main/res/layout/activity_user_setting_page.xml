<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingPage">

    <ImageView
        android:id="@+id/tvlogo"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/userAccountSettings"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#1E4F80"
        android:text="Account Setting"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/userChangeTheme"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userChangeTheme"
        app:layout_constraintTop_toBottomOf="@+id/tvlogo" />

    <Button
        android:id="@+id/UserSettingBackButton"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLogout" />

    <Button
        android:id="@+id/UserDeleteAccount"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Delete Account"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userChangeTheme"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/userLogout"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="LogOut"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/UserSettingBackButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UserSettingBackButton"
        app:layout_constraintTop_toBottomOf="@+id/UserDeleteAccount" />

    <Button
        android:id="@+id/userChangeTheme"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Change Theme"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/userLogout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userLogout"
        app:layout_constraintTop_toBottomOf="@+id/userAccountSettings" />


</androidx.constraintlayout.widget.ConstraintLayout>

