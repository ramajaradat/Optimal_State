<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingPage">

    <ImageView
        android:id="@+id/tvlogo"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/applogo" />


    <Button
        android:id="@+id/userSettingBackButton"
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userLogout" />

    <Button
        android:id="@+id/UserCheckNotification"
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Set Check Notification"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userChangeTheme" />

    <Button
        android:id="@+id/userAccountSettings"
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#1E4F80"
        android:text="Account Setting"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvlogo" />

    <Button
        android:id="@+id/userChangeTheme"
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="Change Theme"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAccountSettings" />

    <Button
        android:id="@+id/userLogout"
        android:layout_width="294dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#1E4F80"
        android:text="LogOut"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UserCheckNotification" />
</androidx.constraintlayout.widget.ConstraintLayout>
