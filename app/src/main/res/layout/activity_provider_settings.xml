<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingPage">

    <ImageView
        android:id="@+id/tvlogo"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/AccountSettingButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#EBC76F"
        android:text="Account Setting"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/NotiButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/NotiButton"
        app:layout_constraintTop_toBottomOf="@+id/tvlogo" />

    <Button
        android:id="@+id/NotiButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#EBC76F"
        android:text="Change Theme"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Logoutbutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Logoutbutton"
        app:layout_constraintTop_toBottomOf="@+id/AccountSettingButton" />

    <Button
        android:id="@+id/Logoutbutton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#EBC76F"
        android:text="LogOut"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/BackButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BackButton"
        app:layout_constraintTop_toBottomOf="@+id/NotiButton" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#EBC76F"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logoutbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>