<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserChangeTheme">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/UserDarkThemeButton"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="#1E4F80"
        android:text="Dark Theme"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/UserLightThemeButton"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="59dp"
        android:backgroundTint="#1E4F80"
        android:text="Light Theme"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/UserDarkThemeButton"
        app:layout_constraintStart_toStartOf="@+id/UserDarkThemeButton"
        app:layout_constraintTop_toBottomOf="@+id/UserDarkThemeButton" />

    <Button
        android:id="@+id/UserBackChangeThemeButton"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="59dp"
        android:backgroundTint="#1E4F80"
        android:text="Back"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserLightThemeButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
