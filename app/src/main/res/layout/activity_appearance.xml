<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appearance">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/Themebutton"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#1E4F80"
        android:text="Change Theme"
        app:layout_constraintEnd_toEndOf="@+id/FontSizebutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FontSizebutton"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <Button
        android:id="@+id/FontSizebutton"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="59dp"
        android:backgroundTint="#1E4F80"
        android:text="Change Font Size"
        app:layout_constraintEnd_toEndOf="@+id/back3Button"
        app:layout_constraintStart_toStartOf="@+id/back3Button"
        app:layout_constraintTop_toBottomOf="@+id/Themebutton" />

    <Button
        android:id="@+id/back3Button"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#1E4F80"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FontSizebutton" />
</androidx.constraintlayout.widget.ConstraintLayout>