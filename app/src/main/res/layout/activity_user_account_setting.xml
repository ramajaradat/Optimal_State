<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountSetting">

    <Button
        android:id="@+id/UserDeleteAccount"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#1E4F80"
        android:text="Delete Account"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserChangePassButton" />

    <ImageView
        android:id="@+id/tvlogo"
        android:layout_width="410dp"
        android:layout_height="153dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/UserProfilInfoButton"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#1E4F80"
        android:text="Profile Information"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlogo" />

    <Button
        android:id="@+id/UserChangePassButton"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#1E4F80"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/UserChangAccountBackButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UserChangAccountBackButton"
        app:layout_constraintTop_toBottomOf="@+id/UserProfilInfoButton" />

    <Button
        android:id="@+id/UserChangAccountBackButton"
        android:layout_width="284dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#1E4F80"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserDeleteAccount" />


</androidx.constraintlayout.widget.ConstraintLayout>
