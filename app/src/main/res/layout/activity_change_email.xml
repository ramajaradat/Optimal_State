<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeEmail">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/currentemail"
        app:layout_constraintStart_toStartOf="@+id/currentemail"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userlogo" />

    <EditText
        android:id="@+id/newemail"
        android:layout_width="295dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="New E-mail"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#101010"
        app:layout_constraintEnd_toEndOf="@+id/currentPassword"
        app:layout_constraintStart_toStartOf="@+id/currentPassword"
        app:layout_constraintTop_toBottomOf="@+id/currentemail" />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="295dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:ems="15"
        android:hint="Current Password"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="#000000"
        android:textColorHint="#101010"
        app:layout_constraintEnd_toEndOf="@+id/email_edit_button"
        app:layout_constraintStart_toStartOf="@+id/email_edit_button"
        app:layout_constraintTop_toBottomOf="@+id/newemail" />

    <Button
        android:id="@+id/email_edit_button"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#303F9F"
        android:text="Set Update"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/email_cancle_button"
        app:layout_constraintStart_toStartOf="@+id/email_cancle_button"
        app:layout_constraintTop_toBottomOf="@+id/newemail" />

    <Button
        android:id="@+id/email_cancle_button"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#303F9F"
        android:text="Cancle"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_button" />

    <TextView
        android:id="@+id/currentemail"
        android:layout_width="295dp"
        android:layout_height="64dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="Current E-mail"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#101010"
        app:layout_constraintEnd_toEndOf="@+id/newemail"
        app:layout_constraintStart_toStartOf="@+id/newemail"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>